@model NetCoreApp.Models.Event

@{
    Layout = "~/Views/Shared/_MenuLogedInAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="MenageEvents" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Datefrom" class="control-label"></label>
                <input asp-for="Datefrom" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateTo" class="control-label"></label>
                <input asp-for="DateTo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TotalSpace" class="control-label"></label>
                <input asp-for="TotalSpace" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RemainingSpace" class="control-label"></label>
                <input asp-for="RemainingSpace" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Takesplace" class="control-label"></label>
                <input asp-for="Takesplace" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AdminId" class="control-label"></label>
                <select asp-for="AdminId" class="form-control" asp-items="ViewBag.AdminId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowAllEvents" asp-controller="MenageEvents">Back to List</a>
</div>

</body>
</html>
