@model NetCoreApp.Models.Event

@{
    Layout = "~/Views/Shared/_MenuLogedInAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Datefrom" class="control-label"></label>
                <input asp-for="Datefrom" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateTo" class="control-label"></label>
                <input asp-for="DateTo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalSpace" class="control-label"></label>
                <input asp-for="TotalSpace" class="form-control" />
                <span asp-validation-for="TotalSpace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RemainingSpace" class="control-label"></label>
                <input asp-for="RemainingSpace" class="form-control" />
                <span asp-validation-for="RemainingSpace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Takesplace" class="control-label"></label>
                <input asp-for="Takesplace" class="form-control" />
                <span asp-validation-for="Takesplace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminId" class="control-label"></label>
                <select asp-for="AdminId" class="form-control" asp-items="ViewBag.AdminId"></select>
                @*<input asp-for="AdminId" class="form-control" value="@TempData["AdminId"]" />*@
            </div>
                    @if (TempData["mess"] != null)
                    {
                        <p>@TempData["mess"]</p>
                    }
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        </body>
        </html>
