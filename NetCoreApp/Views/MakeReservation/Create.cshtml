@model NetCoreApp.Models.ReservationOrBuying

@{
    Layout = "~/Views/Shared/_MenuLogedInUsers.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <style>
        #lavelll {
            visibility: hidden;
        }
        #inputttt {
            visibility: hidden;
        }
    </style>
</head>
<body>

<h4>ReservationOrBuying</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="MakeReservation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOn" class="control-label"></label>
                <input asp-for="DateOn" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
            </div>
            @if (TempData["mess1"] != null)
              {
                <p>@TempData["mess1"]</p>
              }
            <div class="form-group">
                <input type="submit" value="Reserve" class="btn btn-default" />
            </div>
            <div class="form-group">
                <label id="lavelll" asp-for="Price" class="control-label"></label>
                <input id="inputttt" asp-for="Price" class="form-control" value="1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
